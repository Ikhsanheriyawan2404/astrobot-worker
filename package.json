{
  "name": "be-astro",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create astro",
    "db:drop:local": "wrangler d1 execute astro --local --file=./migrations/0003_drop.sql",
    "db:migrate:local": "wrangler d1 execute astro --local --file=./migrations/0002_init_dev.sql",
    "db:migrate:remote": "wrangler d1 execute astro --remote --file=./migrations/0001_init.sql"
  },
  "dependencies": {
    "hono": "^4",
    "openai": "^6.16.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4",
    "@types/node": "^25.0.10",
    "dotenv": "^17.2.3",
    "telegraf": "^4.16.3",
    "wrangler": "^4"
  }
}
